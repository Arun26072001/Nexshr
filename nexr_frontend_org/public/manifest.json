{
  "manifest_version": 3,
  "name": "NexsHR Timer",
  "version": "1.0",
  "description": "A shared timer across all tabs.",
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "webnexs_logo.png"
  },
  "externally_connectable": {
    "ids": ["nbigkafgobepddldjomokkmclaikkfdb"],
    "matches": ["http://localhost:3336/*"]
  }
}
